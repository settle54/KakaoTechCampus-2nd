<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_card"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:paddingStart="40dp"
        android:paddingEnd="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 시간 -->
            <TextView
                android:id="@+id/dayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="10sp" />

            <!-- 시간 -->
            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="10sp" />

            <!-- 여백을 위한 빈 View -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- 상단 아이콘 레이아웃 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 즐겨찾기 아이콘 -->
                <ImageView
                    android:id="@+id/bookmarkIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="6dp"
                    android:clickable="false"
                    android:src="@drawable/bookmark_26dp_5f6368_fill0_wght300_grad0_opsz24" />

                <!-- 공유 아이콘 -->
                <ImageView
                    android:id="@+id/shareIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="6dp"
                    android:clickable="false"
                    android:src="@drawable/share_26dp_5f6368_fill0_wght300_grad0_opsz24" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 위치 이름 -->
            <TextView
                android:id="@+id/locationNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 주소 -->
        <TextView
            android:id="@+id/addressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:ellipsize="end"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emotion"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="3dp"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailedDiaryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/preview_diary"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone">

            <!-- 동적 이미지 콘텐츠 -->
            <ImageView
                android:id="@+id/diaryImageContent"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <!-- 동적 텍스트 콘텐츠 -->
            <TextView
                android:id="@+id/diaryTextContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- 위치 마커 아이콘 -->
    <ImageView
        android:id="@+id/locationMarker"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="0dp"
        android:elevation="8dp"
        android:src="@drawable/ic_marker" />
</FrameLayout>
